{
  "routes": [
    {
      "method": "GET",
      "path": "/tracks",
      "handler": "track.find",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/tracks/count",
      "handler": "track.count",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    },
    {
      "method": "GET",
      "path": "/tracks/:id",
      "handler": "track.findOne",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    },
    {
      "method": "POST",
      "path": "/tracks",
      "handler": "track.create",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    },
    {
      "method": "PUT",
      "path": "/tracks/:id",
      "handler": "track.update",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    },
    {
      "method": "DELETE",
      "path": "/tracks/:id",
      "handler": "track.delete",
      "config": {
        "policies": ["global.isAuthenticated"]
      }
    }
  ]
}
